<view><view class="container"><scroll-view class="topic-list" scroll-y="true" scroll-top="{{scrollTop}}"><block wx:for="{{topicList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><navigator class="item" url="{{'../topicDetail/topicDetail?id='+item.id}}"><image class="img" src="{{item.img}}"></image><view class="info"><text class="title">{{item.name}}</text><text class="desc">{{item.desc}}</text><text class="price">{{item.price+"元起"}}</text></view></navigator></block><block wx:if="{{showPage}}"><view class="page"><view data-event-opts="{{[['tap',[['prevPage',['$event']]]]]}}" class="{{[page<=1?'disabled prev':' prev']}}" bindtap="__e">上一页</view><view data-event-opts="{{[['tap',[['nextPage',['$event']]]]]}}" class="{{[topicList.length<5?'disabled next':'next']}}" bindtap="__e">下一页</view></view></block></scroll-view></view></view>