<view class="goods_container"><swiper style="width:750rpx;height:750rpx;" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}"><block wx:for="{{swiperList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><view class="swiper-item"><image style="width:750rpx;height:750rpx;" src="{{item.img}}" mode></image></view></swiper-item></block></swiper><view class="service-policy"><view class="item">30天无忧退货</view><view class="item">48小时快速退款</view><view class="item">满88元免邮费</view></view><view class="goods-info"><view class="c"><text class="name">{{goods.name}}</text><text class="desc">{{goods.desc}}</text><text class="price">{{"￥"+goods.price}}</text></view></view><view data-event-opts="{{[['tap',[['switchAttrPop',['$event']]]]]}}" class="section-nav section-attr" bindtap="__e"><view class="t">请选择规格数量</view><image class="i" src="../../static/image/icon/address_right.png" background-size="cover"></image></view><view class="attr-pop-box" hidden="{{!openAttr}}"><view class="attr-pop"><view data-event-opts="{{[['tap',[['closeAttr',['$event']]]]]}}" class="close" bindtap="__e"><image class="icon" src="../../static/image/icon_close.png"></image></view><view class="img-info"><image class="img" src="{{showImg}}"></image><view class="info"><view class="c"><view class="p">{{"单价:￥"+goods.price}}</view></view></view></view><view class="spec-con"><block wx:for="{{specificationList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="specification_id"><view class="spec-item"><view class="name">{{item.name}}</view><view class="values"><block wx:for="{{item.valueList}}" wx:for-item="vitem" wx:for-index="__i1__" wx:key="id"><view class="{{[vitem.checked?'selected value':'value']}}" data-value-id="{{vitem.id}}" data-name-id="{{vitem.specification_id}}" data-event-opts="{{[['tap',[['clickSkuValue',['$event']]]]]}}" bindtap="__e">{{vitem.value}}</view></block></view></view></block><view class="number-item"><view class="name">数量</view><view class="selnum"><view data-event-opts="{{[['tap',[['cutNumber',['$event']]]]]}}" class="cut" bindtap="__e">-</view><input class="number" disabled="true" type="number" value="{{number}}"/><view data-event-opts="{{[['tap',[['addNumber',['$event']]]]]}}" class="add" bindtap="__e">+</view></view></view></view></view></view><view class="bottom-btn"><view data-event-opts="{{[['tap',[['addCannelCollect',['$event']]]]]}}" class="l l-collect" bindtap="__e"><image class="icon" src="{{collectBackImage}}"></image></view><view class="l l-cart"><view class="box"><text class="cart-count">{{cartGoodsCount}}</text><image class="icon" src="/static/image/icon/shop-car.png" data-event-opts="{{[['tap',[['openCartPage',['$event']]]]]}}" bindtap="__e"></image></view></view><view class="c">立即购买</view><view data-event-opts="{{[['tap',[['addToCart',['$event']]]]]}}" class="r" bindtap="__e">加入购物车</view></view></view>